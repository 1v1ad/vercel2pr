generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  vk_id      Int      @id
  first_name String
  last_name  String
  avatar     String?
  email      String?
  created_at DateTime @default(now())
  events     Event[]
}

model Event {
  id         Int      @id @default(autoincrement())
  vk_id      Int
  action     String
  created_at DateTime @default(now())

  user       User     @relation(fields: [vk_id], references: [vk_id])
}
